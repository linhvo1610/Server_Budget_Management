<%- include('../inc/top') %>
    <div class="container" style="min-height: 575px;">
        <div class="row justify-content-center" style="margin-top: 10px;">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section"><b>Quản Lý Loại Sản Phẩm</b></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex flex-row-reverse" style="margin-bottom: 5px;"><button type="button" class="btn btn-success " onclick="location.href='http://10.24.25.33:8000/category/addreceivecat'">Add Category</button></div>
                <div class="table-wrap">
                    <table class="table table-responsive-xl">
                        <thead class="thead-dark">
                            <tr>

                                <th>ID</th>
                                <th>Image</th>
                                <th><a class="text-light" href="http://10.24.25.33:8000/category/receivecat/sortreceivecatname">Name</a></th>
                                <th>&nbsp</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% list.forEach(data=>{%>
                                <tr class="alert" role="alert">
                                    <th>
                                       <a href="/category/receivecat/update/<%=data._id%>"> <%=data.id %> </a>
                                    </th>
                                    <td>
                                     <img src="/<%= data.image %>" width="40" height="40" alt="">  
                                    </td>

                                    <td>
                                        <%=data.name %>
                                    </td>

                                   
                                    <td>
                                        <button type="submit" >
                                        <span><a href="/category/receivecat/delete/<%=data._id%>" onclick="return confirm_alert(this);">Delete</a></span>
                                    </button>
                                    <button type="submit" >
                                        <span><a href="/category/receivecat/update/<%=data._id%>" onclick="return confirm_alert(this);">Update</a></span>
                                    </button>
                                    </td>
                                </tr>
                                
                                <%} ) %>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        function confirm_alert(node) {
            return confirm("Please click on OK to continue.");
        }
        </script>

    <%- include('../inc/bottom') %>
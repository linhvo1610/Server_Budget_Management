<%- include('../inc/top') %>
    <div class="container" style="min-height: 575px;">
        <div class="row justify-content-center" style="margin-top: 10px;" >
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section"><b>LIST OF BUDGETS</b></h2>
            </div>
        </div>
      
        <div class="row" style="min-height: 600px;">
            <div class="col-md-12">
                <div class="d-flex flex-row-reverse" style="margin-bottom: 5px;"><button type="button" class="btn btn-success " onclick="location.href='http://192.168.0.103:8000/budget/add'">Add Budget</button></div>
                <div class="table-wrap">
                    <table class="table table-responsive-xl">
                        <thead class="thead-dark">
                            <tr>

                                <th>ID</th>
                                <th>User</th>
                                <th>Title</th>
                                
                                <th>Category</th>
                                <th>Price</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% list.forEach(data=>{%>
                                <tr class="alert" role="alert">
                                    <th>
                                        <%=data.id %> 
                                    </th>
                                    
                                    <td>
                                        <%=data.id_user %>
                                      
                                    </td>
                                    <td>
                                        <%=data.title %>
                                        
                                    </td>
                                    <td>
                                        <%=data.id_cat.name %>
                                    </td>
                                    <td>
                                        <%=data.price %>
                                    </td>

                                   
                                    <td>
                                        <button type="submit" >
                                        <span><a href="/budget/detail/<%=data._id%>" onclick="return confirm_alert(this);">Detail</a></span>
                                    </button>
                                   
                                    
                                    </td>
                                </tr>
                                
                                <%} ) %>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        function confirm_alert(node) {
            return confirm("Please click on OK to continue.");
        }
        </script>

    <%- include('../inc/bottom') %>
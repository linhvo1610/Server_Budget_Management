<%- include('../inc/top') %>
<div class="container">
    <div class="page-wrapper p-t-45 p-b-50">
        <div class="wrapper wrapper--w790">
            <div class="card card-5">
                <div class="card-heading">
                    <h2 class="title">SỬA SẢN PHẨM </h2>
                </div>
                <div class="card-body">
                    <form action="" method="POST" enctype="multipart/form-data">
                        
                        <div class="form-row">
                            <div class="name">Tên</div>
                            <div class="value">
                                <div class="row row-refine">
                                <div class="input-group col-7">
                                    <input class="input--style-5"  style="background-color: rgb(238, 243, 243);" type="text" name="name" value="<%= objProduct.name %>" placeholder="<%= objProduct.name %>" disabled>
                                </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row m-b-55">
                            <div class="name">Hình ảnh</div>
                            <div class="value">
                                <div class="row row-refine">
                                <div class="input-group">
                                    <input class=""  style="margin-left: 20px;" type="file" name="image">
                                </div>
                            </div>
                            </div>
                        </div>
                        <div class="form-row m-b-55 ">
                            <div class="name">Loại</div>

                            
                            <select class="browser-default custom-select" style="width:200px;background-color: rgb(246, 248, 248);" name="category">
                                <% list_cat.forEach((cat)=>{ 
                                    let selected = "";
                                    if(String(cat._id)==String(objProduct.id_cat)){
                                        selected='  selected  ';
                                    }
                                    
                                    %>
                                    <option <%= selected %> value="<%= cat._id %>"><%= cat.name %></option>
                                    
                                  <% }); %>
                                
                                
                               
                    
                              </select>
                        </div>
                        <div class="form-row m-b-55">
                            <div class="name">Mô tả</div>
                            <div class="value">
                                <div class="row row-refine">
                                    <div class="col-7">
                                        <div class="input-group-desc">
                                            <input class="input--style-5"  style="background-color: rgb(238, 243, 243);" value="<%= objProduct.description %>" type="text" name="description" placeholder="<%= objProduct.description %>">

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="form-row m-b-55">
                            <div class="name">Giá</div>
                            <div class="value">
                                <div class="row row-refine">
                                    <div class="col-7">
                                        <div class="input-group-desc">
                                            <input class="input--style-5" style="background-color: rgb(238, 243, 243);" type="number" value="<%= objProduct.price %>" name="price" placeholder="<%= objProduct.price %>">

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        
                       
                        <div class="d-flex justify-content-center">
                            <button class="btn btn--radius-2 btn--green" type="submit">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../inc/bottom') %>
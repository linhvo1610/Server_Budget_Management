<%- include('../inc/top') %>
    <div class="container">
        <div class="page-wrapper p-t-45 p-b-50">
            <div class="wrapper wrapper--w790">
                <div class="card card-5">
                    <div class="card-heading">
                        <h2 class="title">SỬA NGƯỜI DÙNG</h2>
                    </div>
                    <div class="card-body">
                        <form action="" method="POST">
                            
                            <div class="form-row">
                                <div class="name">Email</div>
                                <div class="value">
                                    <div class="row row-refine">
                                    <div class="input-group col-8">
                                        <input  class="input--style-5" placeholder="<%= objUser.email %>" value="<%= objUser.email %>" type="email" name="email">
                                    </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row m-b-55">
                                <div class="name" >Username</div>
                                <div class="value">
                                    <div class="row row-refine">
                                    <div class="input-group col-8">
                                        <input class="input--style-5" placeholder="<%= objUser.username %>" value="<%= objUser.username %>" type="username" name="username">
                                    </div>
                                </div>
                                </div>
                            </div>
                            <div class="form-row m-b-55">
                                <div class="name">Password</div>
                                <div class="value">
                                    <div class="row row-refine">
                                        <div class="col-8">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="password" name="password" value="<%= objUser.password %>">
                                                <label class="label--desc">password</label>
                                            </div>
                                        </div>
    
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Role</div>
                                <div class="value">
                                    <div class="input-group">
                                        <div class="rs-select2 js-select-simple select--no-search">
                                            <select name="role" class="browser-default custom-select" value="<%= objUser.role %>" style="width:200px;background-color: rgb(246, 248, 248);">
                                                <option disabled="disabled" selected="selected">Choose role</option>
                                                <option>Admin</option>
                                                <option>User</option>

                                            </select>
                                            <div class="select-dropdown"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                            <div class="d-flex justify-content-center">
                                <button class="btn btn--radius-2 btn--green" type="submit">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <%- include('../inc/bottom') %>